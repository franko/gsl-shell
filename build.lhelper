CC=gcc
CXX=g++
CFLAGS=
CXXFLAGS=
LDFLAGS=
CPU_TYPE=x86-64
CPU_TARGET=x86-64

BUILD_TYPE=Release

if [[ "$OSTYPE" == "msys"* || "$OSTYPE" == "mingw"* ]]; then
  packages=("freetype2" "fox")
else
  packages=("fox -xft")
fi

# Do not install the gsl package "gsl -blas=openblas" because it is built as a
# subproject.
packages+=(
  "openblas -arch=static"
)

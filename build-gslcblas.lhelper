#!/bin/bash
CC="${CC:-gcc}"
CXX="${CXX:-g++}"
# CFLAGS=
# CXXFLAGS=
# LDFLAGS=

BUILD_TYPE=Release

if [[ "$OSTYPE" == "msys"* || "$OSTYPE" == "mingw"* ]]; then
  packages=("freetype2" "fox")
elif [[ "$OSTYPE" == "linux"* || "$OSTYPE" == *"bsd" ]]; then
  packages=("freetype2" "expat" "fontconfig" "xft" "fox -xft")
else
  packages=()
fi

